	MAP MAPSensor;
	MAT MATSensor;
	CLT CLTSensor;
	TPS TPSSensor;
	EGO EGOSensor;
	CKP CKPSensor;

	EFI();

	void run();

	bool getCheckEngineLight();

	bool setCheckEngineLight(bool checkEngineLight);



	void checkSensor();

	void updateTable();

};

