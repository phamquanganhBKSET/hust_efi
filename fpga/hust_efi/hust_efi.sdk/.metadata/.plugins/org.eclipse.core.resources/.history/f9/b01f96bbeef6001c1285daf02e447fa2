{

}

float calculateBTDC(uint8_t crankCounter);

float calculateIgnitionTime(float CLT, float MAP, float RPM);

float calculateInjectionTime(float CLT, float EGO, float MAP, float RPM);

void EFI::checkSensor() {
	MAPSensor.check();
	MATSensor.check();
	CLTSensor.check();
	TPSSensor.check();
	EGOSensor.check();
	CKPSensor.check();
}

